<dl>
    <dt>
        » 首页管理
    </dt>
    <dd>
        <%= form_remote_tag(:loading=>"showLoading()",:complete=>"hideLoadingAndReload(request.responseText);",:url => { :controller=>:admin, :action => :updateHomePage} ) %>
        <table cellspacing="10">
            <% for i in 1..4 %>
            <tr>
                <% for j in 0..6 %>
                <td>
                    <% photo = Photo.find(:first,:conditions=>["id = #{@photoIDs[(7*(i-1)+j)]}"]) %>
                    <% if not photo.nil? %>
                    <img src="<%=getBoxImageUrl(photo)%>" alt="<%=photo.tags%>"><% else %>
                    错误ID<% end %>
                    <input name="photo<%=7*(i-1)+j %>" size="5" type="text" value="<%=@photoIDs[(7*(i-1)+j)]%>"/>
                </td><% end %>
            </tr><% end %>
        </table>
        <br>
        <table width="96%">
            <tr>
                <td align="right">
                    <%=submit_tag "修改首页图片显示位" %>
                </td>
            </tr>
        </table>
        </form>
    </dd>
</dl>
