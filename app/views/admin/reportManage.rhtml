<dl>
    <dt>
        » 举报管理
    </dt>
    <dd>
        <table width="100%" cellspacing="5">
            <tr>
                <td>
                    类型
                </td>
                <td>
                    内容
                </td>
                <td>
                    举报时间
                </td>
                <td>
                </td>
            </tr>
            <% for report in @reports %>
            <tr>
                <td>
                    <%=report.reportType %>
                </td>
                <td>
                    <%=report.content %>
                </td>
                <td>
                    <%=report.datetime.strftime("%m-%d %I:%M%p") %>
                </td>
                <td>
                    <%=link_to_remote( "删除",:loading=>"showLoading()",:complete=>"hideLoading();alert('删除成功！');location.reload();", :url => { :action => "deleteReport",:id=>report.id } ) %>
                </td>
            </tr>
            <% end %>
        </table>
    </dd>
    <dd>
        <div class="pages">
            <%=page_links_full @report_pages %>
        </div>
    </dd>
</dl>
