<script type="text/javascript">
    window.onload = function(){
        var oFCKeditor = new FCKeditor('album_description', '480', '180', 'Basic', '');
        oFCKeditor.ReplaceTextarea();
    }
</script>
<div id="content">
    <div id="heading">
        <h1><%=l("album_label_editTitle") %></h1>
    </div>
    <div class="clear">
    </div>
    <div id="rightWrapper">
        <div id="container">
        	<div id="sidebar">
	            <img src="<%=getAlbumCover(@album,1)%>" width="220" alt="<%=@album.name%>">
	        </div>
            <div id="main">
                <div id="uploadr">
                <% if @result==true %>
                <script>
                    alert("<%= @alertMessage %>");
                    location = "<%=@redirect_url %>";
                </script>
                <% elsif @result==false %>
                <div class="Problem" id="successMessages">
                    <%=@alertMessage %>
                    <%= error_message_on(:album,:name) %>
                    <%= error_message_on(:album,:downloadPoint) %>
                </div>
                <% end %>
                <%= form_tag(:action => :edit) %>
                <%=hidden_field("album","id") %>
                <dl id="sending_to_album">
                    <dt>
                        <label for="send_to_album">
                            <%=l("album_label_albumName") %>：
                        </label>
                    </dt>
                    <dd>
                        <%=text_field("album","name",:size=>70,:class=>"txt") %>
                    </dd>
                </dl>
                <dl>
                    <dt>
                        <%=l("album_label_albumDesc") %>：
                    </dt>
                    <dd>
                        <%= text_area "album","description",:cols=>60,:rows=>10 %>
                    </dd>
                </dl>
                <% if @album.isPacked %>
                <dl>
                    <dt>
                        <%=l("album_label_downloadPoint") %>：
                    </dt>
                    <dd>
                        <%= text_field("album","downloadPoint",:size=>60,:class=>"txt") %>
                    </dd>
                </dl>
                <% end %>
                <dl>
                    <dd class="submit">
                        <input id="submit" type="submit" value="<%=l("album_button_updateSubmit")%>" class="Btn"/>
                    </dd>
                </dl>
                </form>
            </div>
        </div>
    </div>
    <div class="clear">
    </div>
</div>
</div>
