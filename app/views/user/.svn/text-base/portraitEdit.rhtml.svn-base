<% if @result==true %>
<div class="Confirm" id="successMessages">
    <%=@alertMessage %>
</div>
<% elsif @result==false %>
<div class="Problem" id="successMessages">
    <%=@alertMessage %>
</div>
<% end %>
﻿<%= form_tag({:action => :portraitEdit} ,:multipart => true) %>
<dl>
    <dt>
        » <%=l("userPortraitEdit_label_title") %>
    </dt>
    <dd>
        <label class="info">
            <%=l("userPortraitEdit_label_choosePortrait") %>：
        </label>
        <%=file_field("user","portrait",:cols=>36,:rows=>5,:class=>"txt") %>
    </dd>
    <dd class="submit">
        <input id="submit" type="submit" value="<%=l("userPortraitEdit_button_update") %>" class="Btn"/>
    </dd>
</dl>
</form>