<div class="list-box">
    <h2><%=l("userHome_label_latestCommentPhotos") %><img alt="" src="/images/green_icon.png"></h2>
    <div class="list-content">
        <% for photo in Photo.find(:all,:conditions=>"lastComment_at != 0",:order=>"lastComment_at desc",:limit=>10) %>
        <div>
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <td valign="top">
                        <a href="/<%=photo.user_id %>/photo/view/<%=photo.id %>"><img class="BuddyIcon headpic" width="48" height="48" alt="<%=photo.tags %>" src="<%=getBoxImageUrl(photo) %>"></a>
                    </td>
                    <td valign="top">
                        <ul>
                            <li>
                                <a href="/<%=photo.user_id %>/photo/view/<%=photo.id %>#comment" target="_blank">
                                <%=photo.comments.last.content.split(//)[0..20] %>...
                                </a>
                            </li>
							<li class="floorNum">
                                <%=photo.lastComment_at.strftime("%m-%d %I:%M %p") %>
                            </li>
                        </ul>
                    </td>
                </tr>
            </table>
        </div>
        <br>
        <% end %>
    </div>
</div>
