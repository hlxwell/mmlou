<% if @result == true %>
<div class="Confirm" id="successMessages">
    <%=@alertMessage %>
</div>
<% elsif @result == false %>
<div class="Problem" id="successMessages">
    <%=@alertMessage %>
    <%=error_message_on(:userinformation,:sign) %>
</div>
<% end %>
<%= form_tag(:controller=>:user,:action => :updateInformation) %>
<dl>
    <dt>
        Â» <%=l("userUpdateInform_label_personalInform") %>
    </dt>
    <dd>
        <label class="info">
            <%=l("userUpdateInform_label_realname") %>
        </label>
        <%=text_field("userinformation","realname",:size=>26,:maxlength=>20,:class=>"txt") %>
    </dd>
    <dd>
        <label class="info">
            <%=l("userUpdateInform_label_sex") %>
        </label>
        <%= select("userinformation", "sex", @sexChoice) %>
    </dd>
    <dd>
        <label class="info">
            <%=l("userUpdateInform_label_birthday") %>
        </label>
        <%=date_select("userinformation","birthday",:start_year=>1960,:end_year=>2010,:use_month_numbers=>true,:class=>"txt") %>
    </dd>
    <dd>
        <label class="info">
            <%=l("userUpdateInform_label_hometown") %>
        </label>
        <%=text_field("userinformation","hometown",:class=>"txt",:maxlength=>20,:size=>26) %>
    </dd>
    <dd>
        <label class="info">
            <%=l("userUpdateInform_label_sign") %>
        </label>
        <%= text_area "userinformation","sign",:cols=>40,:rows=>5 %>
    </dd>
    <dd class="submit">
        <input id="submit" type="submit" value="<%=l("userUpdateInform_button_savePersonalInform")%>" class="Btn"/>
    </dd>
</dl>
</form>