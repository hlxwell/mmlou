<div class="ctx current">
  <div class="ctx-body">
    <!--前一张-->
    <% if @prePhoto %>
      <div class="ctx-img-left"><a class="navPhotoLink" href="/<%=@user.id %>/photo/view/<%=@prePhoto.id %>"><img src="<%=getBoxImageUrl(@prePhoto) %>" alt="<%=@prePhoto.description %>"/><br><%=l("photo_link_prevPhoto")%></a></div>
    <% else %>
      <div class="ctx-img-left"><img src="/images/default_set_photo_end.gif" alt="<%=l("photo_label_alreadyFirst")%>"/><br><%=l("photo_label_alreadyFirst")%></div>
    <% end %>    
    <div class="ctx-img-current"><img src="<%=getBoxImageUrl(@photo) %>" width="75" height="75" alt="<%=@photo.description %>"/><br><%=l("photo_link_currentPhoto")%></div>    
    <!--后一张-->
    <% if @nextPhoto %>
      <div class="ctx-img-right"><a class="navPhotoLink" href="/<%=@user.id %>/photo/view/<%=@nextPhoto.id %>"><img src="<%=getBoxImageUrl(@nextPhoto) %>" alt="<%=@nextPhoto.description %>"/><br><%=l("photo_link_nextPhoto")%></a></div>
    <% else %>
      <div class="ctx-img-right"><span><img src="/images/default_set_photo_end.gif" alt="<%=l("photo_label_alreadyLast")%>"/><br><%=l("photo_label_alreadyLast")%></span></div>
    <% end %>
  </div>
</div>