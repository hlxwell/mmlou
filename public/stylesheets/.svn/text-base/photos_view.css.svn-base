#favor{
	margin-top: 15px;
	margin-bottom: 10px;
}

#favor a{
	font-size: 14px;
	padding-left: 30px;
	font-weight: bold;
	background: #ffffff url('/images/addFavor_up.gif') no-repeat left center;
}

#favor a:hover {
	font-size: 14px;
	padding-left: 30px;
	font-weight: bold;
	background: #ffffff url('/images/addFavor_down.gif') no-repeat left center;
}

#description_editor{
    margin-top: 1em;
	font-size:14px;
	font-weight:bold;
	padding:10px;
	width:480px;
	word-break:break-all;
}

#description_editor textarea{
	width: 100%;
	height: 80px;
}

#description_editor input{
	margin-right: 10px;
}

#thetags ul{
	list-style:none;
}
#albumNameLink{
	font-size:16px;
	font-weight:bold;
	font-family:Arial, Helvetica, sans-serif;
	line-height:28px;
}
/* ########################## */
/*      PHOTO META            */
/* ########################## */
div.Uploader {
    margin-bottom: 1.5em;
    font-size: 12px;
    font-weight: normal;
}

#photoMeta {
    font-size: 1em;
    color: #999;
}

#photoMeta ul {
    padding-left: 1.3em;
    list-style-type: circle;
}

#metadata table {
    width: 100%;
    font-family: arial, helvetica, sans-serif;
}

#metadata table#firstLevelTags {
    font-size: 1.5em;
    font-weight: bold;
}

#metadata table#secondLevelTags {
    font-size: 1em;
}

#metadata table#thirdLevelTags {
    font-size: 1em;
    background-color: #f5f5f5;
}

#metadata td {
    padding: 7px 5px;
    border-bottom: 1px solid #ddd;
}

#metadata .Label {
    text-align: left;
    width: 145px;
}

.mask {
    background: url(/images/spacer.gif);
    position: absolute;
    top: 0px;
    left: 0px;
    z-index: 900;
}

.viewmask {
    background: url(/images/spacer.gif);
    position: relative;
    z-index: 900;
}
/* ########################## */
/*      PHOTO CONTEXT         */
/* ########################## */
.ctx {
    position: relative;
    margin-bottom: 10px;
}

.ctx-body {
    position: relative;
    padding: 5px 5px 4px 5px;
    border: 1px solid #e3e3e3;
    border-left-width: 0;
    background: #f3f3f3 url(/images/context_crap.gif) no-repeat left top;
    z-index: 187;
	width:215px;
	height:100px !important;
}

.ctx-body img{
	margin-bottom:3px;
}

.ctx-img-left {
	float:left;
    border: 1px solid #ccc;
    margin-right: 3px;
	padding:1px;
	overflow:hidden;
	width:62px;	
	width:60px !important;
	text-align:center;
}

.ctx-img-current {
	float:left;
    border: 1px solid #ccc;
    margin-right: 3px;
	padding:1px;
	text-align:center;
	font-weight:bolder;
}

.ctx-img-right {
	float:right;
    border: 1px solid #ccc;
	padding:1px;
	width:62px;
	width:60px !important;
	overflow:hidden;
	text-align:center;
}

.navPhotoLink:link,.navPhotoLink:visited,.navPhotoLink:active {
	text-decoration: none;
}

#tagadder_trigger{
	width: 100px;
	margin-left:10px;
	margin-top:10px;
	padding: 5px;
	font-weight:bold;
	font-size:14px;
}

#tagadder{
	margin-top: 15px;
}

#relatedAlbum {    
    margin-top: 10px;
}

#relatedAlbum .Set {
    width: 100px;
    text-align: left;
    margin-bottom: 15px;
    overflow: hidden;
}

#relatedAlbum .Set h4 {
    width: 120px;
    margin-top: 0px;
    margin-bottom: 0px;
    font-size: 15px;
    font-weight: bold;
}

#relatedAlbum .Set p {
    margin-top: 2px;
    font-size: 12px;
    color: #777;
}

#relatedAlbum .Sets {
    position: relative;
    width: 100px;
    height: 160px;
    text-align: center;
    float: left;
    padding-right: 4px;
    margin-right: 5px;
    margin-bottom: 20px;
    overflow: hidden;
}

#relatedAlbum .Sets h4 {
    width: 100px;
    margin-top: 0px;
    margin-bottom: 0px;
    font-size: 12px;
    font-weight: bold;
}

#relatedAlbum .Sets p {
    margin-top: 2px;
    font-size: 12px;
    color: #777;
}

#relatedAlbum .SetCase {
    position: relative;
    margin-top: 5px;
    margin-bottom: 3px;
    width: 91px;
    height: 95px;
    padding-top: 7px;
    padding-bottom: 0px;
    background: url(/images/set_case.gif) no-repeat;
    text-align: center;
    vertical-align: middle;
}

#relatedAlbum .SetCase img {
    border: 1px solid #000;
    margin: 0px;
    padding: 0px;
}

#relatedAlbum .SetCase img.Icon {
    border: 0;
}

.download {
	padding-left: 25px;
	background: url(/images/download.gif) no-repeat left;
}
