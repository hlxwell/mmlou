/*-------------------------------------------------
 Container
 -------------------------------------------------*/
#header, #content, #footer {
    position: relative;
    text-align: left;
    margin: 0 auto;
    width: 760px;
}

#content {
    padding: 1.5em 0;
}

#container {
    border: solid 1px #fff;
    border-width: 0 1px;
    margin: 0 -1px; /* compensate for the borders because of 100% width declaration */
    width: 100%;
    z-index: 1;
}
/*-------------------------------------------------
 HEADER
 -------------------------------------------------*/
#header {
    font-family: arial, helvetica, sans-serif;
    padding-top: 5px;
    border-bottom: 1px solid #dddddd;
}
#errorTitle{
	font-size:18px;
	font-weight:bolder;
	margin-bottom:10px;
}
.centerblock {
    padding: 1em;
    margin: 60px auto 60px auto;
    width: 400px;
    background-color: #EFF8E1;
    border: 1px solid #91D134;
    vertical-align: middle;
	text-align:left;
	font-size:16px;
	line-height:20px;
}